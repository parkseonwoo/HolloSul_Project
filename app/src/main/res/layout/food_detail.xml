<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/food1"
                android:clickable="true"
                android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="요코초"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/star"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="30dp"
                android:textColor="#d96c53"
                android:drawableLeft="@drawable/star_bg"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="200dp">

            <Button
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/review_bg"
                android:background="@drawable/border"
                android:text="리뷰쓰기"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/star_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/like_bg"
                android:background="@drawable/border"
                android:text="좋아요"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/location_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울특별시 마포구 성미산로 161-15"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tel_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02-324-8875"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/food"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="음식 종류"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/food_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이자카야 / 오뎅 / 꼬치"
                android:textSize="15dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="가격대"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/price_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="만원-2만원"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parking"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="주차"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/parking_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주차공간 없음"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="영업시간"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/time_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00 - 02:00"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/holiday"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="휴일"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/holiday_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월, 화"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/menu"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="메뉴"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/menu_detail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="꼬치 7종"
                    android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_detail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="치킨가라아게(5조각)"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_detail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나가사끼짬뽕"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_detail4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="야끼우동"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_detail5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="명란 계란말이"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menu_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19,000원"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13,000원"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22,000"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13,000"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/menu_price5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14,000"
                        android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰(87)"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reviewer1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/reviewer1"
                    android:clickable="true"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/reviews_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.11.06"
                    android:textSize="10dp"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/reviews1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="웨이팅 1시간 넘게 해서 들어갔어요! 엄청 오래 했는데도 맛있게 먹었어용~ 음식 나오는데 시간이 오래걸리는건 좀 아쉬웠어요 ㅠㅠ"
                    android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reviewer2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/reviewer2"
                    android:clickable="true"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/reviews_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020.11.06"
                        android:textSize="10dp"/>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/reviews2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하이볼도 맛있고 .. 명란치즈계란말이 꼭 드셔요! 다만 직원분들이 불친절.."
                        android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
